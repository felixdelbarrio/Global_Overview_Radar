REPUTATION_COLLECTOR_WORKERS=6
REPUTATION_HTTP_CACHE_TTL_SEC=120
REPUTATION_HTTP_CACHE_MAX_ENTRIES=500
REPUTATION_HTTP_RETRIES=1
