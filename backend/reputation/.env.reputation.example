# === Configuracion reputacional (cliente final) ===
# Si falta .env.reputation, se copiará este archivo.

# === IDIOMA ===
# Selecciona el idioma general para noticias y traducciones de opiniones.
# Idioma general. Se aplica a RSS, NewsAPI y traducciones.
NEWS_LANG=es
NEWSAPI_LANGUAGE=es
# Comparar con competencia. Si está desactivado, el frontend oculta la comparación con otros actores y muestra solo el actor principal.
REPUTATION_UI_SHOW_COMPARISONS=false

# === FUENTES SIN CREDENCIALES ===
# Activa o desactiva fuentes que no requieren API Key.
# Noticias (RSS). Agregadores y RSS.
REPUTATION_SOURCE_NEWS=false
# GDELT. Global Database of Events.
REPUTATION_SOURCE_GDELT=false
# Foros. Foros y comunidades.
REPUTATION_SOURCE_FORUMS=false
# Blogs. Blogs RSS.
REPUTATION_SOURCE_BLOGS_RSS=false
# App Store. Opiniones en App Store.
REPUTATION_SOURCE_APPSTORE=true
# Trustpilot. Reseñas Trustpilot.
REPUTATION_SOURCE_TRUSTPILOT=false
# Google Play. Opiniones en Google Play.
REPUTATION_SOURCE_GOOGLE_PLAY=true
# Downdetector. Incidencias y caídas.
REPUTATION_SOURCE_DOWNDETECTOR=false

# === FUENTES CON CREDENCIALES ===
# Activa fuentes que requieren API Key.
# NewsAPI. Proveedor NewsAPI.
REPUTATION_SOURCE_NEWSAPI=false
# The Guardian. Open Platform.
REPUTATION_SOURCE_GUARDIAN=false
# Google Reviews. Reseñas de Google.
REPUTATION_SOURCE_GOOGLE_REVIEWS=false
# YouTube. Comentarios y menciones en YouTube.
REPUTATION_SOURCE_YOUTUBE=false
# Reddit. Conversaciones en Reddit.
REPUTATION_SOURCE_REDDIT=false
# X / Twitter. Conversaciones en X (Twitter).
REPUTATION_SOURCE_TWITTER=false
# API Key NewsAPI. Clave oficial de NewsAPI.
NEWSAPI_API_KEY=
# API Key Guardian. Clave de The Guardian.
GUARDIAN_API_KEY=
# Reddit Client ID. Credencial de Reddit.
REDDIT_CLIENT_ID=
# Reddit Client Secret. Secreto de Reddit.
REDDIT_CLIENT_SECRET=
# X / Twitter Bearer. Token Bearer de X.
TWITTER_BEARER_TOKEN=
# Google Places API Key. Clave para Google Places.
GOOGLE_PLACES_API_KEY=
# YouTube API Key. Clave para YouTube Data API.
YOUTUBE_API_KEY=

# === NOTICIAS ===
# Preferencias rápidas para fuentes de noticias.
# API Key News (opcional). Clave para proveedor News si quieres usar API además de RSS.
NEWS_API_KEY=

# === IA (LLM) ===
# Activa la clasificación con IA y configura el proveedor.
# IA activa. Activa la clasificación con IA.
LLM_ENABLED=false
# Proveedor. Proveedor de IA principal.
LLM_PROVIDER=openai
# OpenAI API Key. Clave de OpenAI.
OPENAI_API_KEY=
# Gemini API Key. Clave de Gemini.
GEMINI_API_KEY=

# === AVANZADO ===
# Variables técnicas (solo si sabes lo que haces).
# Log habilitado. Activa la salida de logs técnicos.
REPUTATION_LOG_ENABLED=false
# Log a fichero. Guarda los logs en un fichero local.
REPUTATION_LOG_TO_FILE=false
# Nombre del fichero de log. Nombre del fichero donde se guardan los logs.
REPUTATION_LOG_FILE_NAME=reputation.log
# Log en modo debug. Incluye detalles adicionales de diagnóstico.
REPUTATION_LOG_DEBUG=false
# Google Play API Key. Clave para Google Play API.
GOOGLE_PLAY_API_KEY=
# Variables adicionales (solo si sabes lo que haces)
AUTH_ALLOWED_EMAILS=
AUTH_BYPASS_ALLOW_MUTATIONS=false
AUTH_BYPASS_MUTATION_KEY=
AUTH_ENABLED=false
AUTH_GOOGLE_CLIENT_ID=
CORS_ALLOWED_ORIGIN_REGEX=^https://gor-frontend-.+\.a\.run\.app$
GOOGLE_CLOUD_LOGIN_REQUESTED=false
NEWSAPI_LANGUAGE=es
