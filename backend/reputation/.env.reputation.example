# === Feature toggle general ===
REPUTATION_ENABLED=true
REPUTATION_CONFIG_PATH=./data/reputation
REPUTATION_LLM_CONFIG_PATH=./data/reputation_llm
# Perfil activo (opcional):
# - vacío => carga todos los JSON del directorio
# - uno => banking_empresas
# - varios => banking_empresas,banking_retail
REPUTATION_PROFILE=

# === Logging ===
REPUTATION_LOG_ENABLED=false
REPUTATION_LOG_TO_FILE=false
REPUTATION_LOG_FILE_NAME=reputation.log
REPUTATION_LOG_DEBUG=false

# === Cache / ventanas temporales ===
# Puedes dejar los defaults y el sistema generará cache por perfil.
# También puedes usar {profile} para rutas dinámicas:
# REPUTATION_CACHE_PATH=./data/cache/reputation_cache__{profile}.json
# REPUTATION_OVERRIDES_PATH=./data/cache/reputation_overrides__{profile}.json
REPUTATION_CACHE_PATH=./data/cache/reputation_cache.json
REPUTATION_OVERRIDES_PATH=./data/cache/reputation_overrides.json
REPUTATION_CACHE_TTL_HOURS=24
REPUTATION_LOOKBACK_DAYS=730
REPUTATION_SSL_VERIFY=true
REPUTATION_DEBUG_FEEDS=false

# === Query behavior (global) ===
REPUTATION_SEGMENT_QUERY_MODE=broad
REPUTATION_DEFAULT_MAX_ITEMS=1200
# === Fast mode (auto caps for large configs) ===
