APP_NAME=Empresas – Global Overview Radar
TZ=Europe/Madrid

ASSETS_DIR=./data/assets
CACHE_PATH=./data/cache/bugresolutionradar_cache.json
INCIDENTS_OVERRIDES_PATH=./data/cache/bugresolutionradar_incidents_overrides.json

# Lista separada por comas. Conectores activos.
SOURCES=filesystem_json,filesystem_csv,filesystem_xlsx

# UI - control de visibilidad del módulo de incidencias en el frontend
INCIDENTS_UI_ENABLED=true

# XLSX knobs (opcional)
XLSX_IGNORE_FILES=
XLSX_PREFERRED_SHEET=Reportes

# JIRA (opcional) - habilita el conector añadiendo "jira" en SOURCES
# Nota: usa la URL base del sitio (p. ej. https://mi-jira o https://mi-jira/jira).
# No pegues URLs de UI tipo /secure/Dashboard.jspa ni endpoints /rest/api/...
JIRA_BASE_URL=
JIRA_USER_EMAIL=
JIRA_API_TOKEN=
# auto | basic | bearer | oauth1 | cookie
JIRA_AUTH_MODE=auto
# OAuth 1.0a (RSA-SHA1) - opcional
JIRA_OAUTH_CONSUMER_KEY=
JIRA_OAUTH_ACCESS_TOKEN=
JIRA_OAUTH_PRIVATE_KEY=
# Cookie de sesión (solo pruebas/local)
JIRA_SESSION_COOKIE=
# Puedes definir la vista con JQL o con un filtro guardado.
JIRA_JQL=
JIRA_FILTER_ID=
JIRA_MAX_RESULTS=500
JIRA_PAGE_SIZE=100
JIRA_TIMEOUT_SEC=30.0
JIRA_VERIFY_SSL=true

MASTER_THRESHOLD_CLIENTS=5
STALE_DAYS_THRESHOLD=15
PERIOD_DAYS_DEFAULT=15

# === Logging ===
LOG_ENABLED=false
LOG_TO_FILE=false
LOG_FILE_NAME=bugresolutionradar.log
LOG_DEBUG=false
