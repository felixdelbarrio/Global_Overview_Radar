NEXT_PUBLIC_LOG_ENABLED=false
NEXT_PUBLIC_LOG_TO_FILE=false
NEXT_PUBLIC_LOG_DEBUG=false
NEXT_PUBLIC_INCIDENTS_ENABLED=true
LOG_FILE_NAME=frontend.log

# Base de la API en el navegador (recomendado: proxy interno)
NEXT_PUBLIC_API_BASE_URL=/api

# Auth (Google GIS)
NEXT_PUBLIC_AUTH_ENABLED=false
NEXT_PUBLIC_GOOGLE_CLOUD_LOGIN_REQUESTED=false
# Con login bypass activo, el proxy /api queda en solo lectura por seguridad.
# Cambiar a false solo si aceptas el riesgo de mutaciones p√∫blicas.
AUTH_BYPASS_READ_ONLY=true
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
NEXT_PUBLIC_ALLOWED_EMAILS=
NEXT_PUBLIC_ALLOWED_DOMAINS=

# Destino del proxy /api (si no se define, en Vercel usa Render por defecto)
# API_PROXY_TARGET=https://global-overview-radar.onrender.com
