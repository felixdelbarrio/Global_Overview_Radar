      "http://portafolio.co/rss/negocios.xml",
      "http://portafolio.co/rss/negocios/empresas.xml",
      "http://portafolio.co/rss/economia/finanzas.xml",
      "http://portafolio.co/rss/economia/empleo.xml",
      "http://portafolio.co/rss/economia/impuestos.xml",
      "https://eleconomista.com.ar/economia/feed/",
      "https://eleconomista.com.ar/negocios/feed/",
      "https://www.anews.com.tr/rss/economy.xml"
    ]
  },

  "forums": {
    "enabled": true,
    "scraping_env": "FORUMS_SCRAPING",
    "max_threads_env": "FORUMS_MAX_THREADS",
    "timeout_seconds_env": "FORUMS_TIMEOUT_SECONDS",
    "rss_urls": [
      "https://news.google.com/rss/search?q=BBVA+Empresas+foro",
      "https://news.google.com/rss/search?q=BBVA+Business+forum",
      "https://news.google.com/rss/search?q=banca+empresas+foro"
    ]
  },

  "blogs": {
    "enabled": true,
    "rss_only_env": "BLOGS_RSS_ONLY",
    "max_items_env": "BLOGS_MAX_ITEMS",
    "rss_urls": [
      "https://news.google.com/rss/search?q=BBVA+Empresas+blog",
