    "max_items_env": "TRUSTPILOT_MAX_ITEMS",
    "rss_urls": [
      "https://news.google.com/rss/search?q=Trustpilot+BBVA+Empresas",
      "https://news.google.com/rss/search?q=Trustpilot+BBVA+Business"
    ]
  },
  "google_reviews": {
