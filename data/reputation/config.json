  "periodo": "últimos 12 meses",

  "idiomas": ["es", "en"],

  "keywords": [
    "BBVA Empresas",
    "BBVA Business",
    "BBVA Empresas app",
    "BBVA Empresas web",
    "BBVA banca empresas",
    "BBVA Business app",
    "BBVA Business web",
    "BBVA Empresas Online",
    "BBVA Net Cash"
  ],

  "plataformas_prioritarias": ["Reddit", "App Store", "News", "YouTube"],

  "muestra_max": 500,
  "umbral_suficiencia": 30,
  "max_muestras_anonimas_por_geo": 10,

  "quality": {
    "duplicate_threshold": 0.85
  },

  "output": {
    "format": "json",
    "path": "./output",
    "cache_enabled": true,
    "cache_ttl_hours": 24
  },

  "reddit": {
    "enabled": true,
    "client_id_env": "REDDIT_CLIENT_ID",
    "client_secret_env": "REDDIT_CLIENT_SECRET",
    "user_agent_env": "REDDIT_USER_AGENT",

    "subreddits": [
      "spain",
      "mexico",
      "fintech",
      "banking",
      "personalfinance",
      "europe"
    ],

    "query_templates": [
      "\"{competidor}\" (empresa OR empresas OR business OR corporate) (app OR web)",
      "\"{competidor}\" (empresas OR business) (login OR error OR bug OR comisión OR soporte)",
      "\"{competidor}\" banca empresas app"
    ],

    "limit_per_query": 150
  },

  "twitter": {
    "enabled": false,
    "api_key_env": "TWITTER_API_KEY",
    "api_secret_env": "TWITTER_API_SECRET",
    "bearer_token_env": "TWITTER_BEARER_TOKEN",
    "max_results_env": "TWITTER_MAX_RESULTS"
  },

  "linkedin": {
    "enabled": false,
    "email_env": "LINKEDIN_EMAIL",
    "password_env": "LINKEDIN_PASSWORD",
    "company_search_env": "LINKEDIN_COMPANY_SEARCH",
    "max_posts_env": "LINKEDIN_MAX_POSTS"
  },

  "news": {
    "enabled": true,
    "api_key_env": "NEWS_API_KEY",
    "lang_env": "NEWS_LANG",
    "max_articles_env": "NEWS_MAX_ARTICLES",
    "sources_env": "NEWS_SOURCES",
    "endpoint_env": "NEWS_API_ENDPOINT",
    "rss_only_env": "NEWS_RSS_ONLY",
    "rss_query_enabled": true,
    "rss_query_templates": [
      "https://news.google.com/rss/search?q={query}&hl={hl}&gl={gl}&ceid={ceid}"
    ],
    "rss_geo_map": {
      "España": { "hl": "es", "gl": "ES", "ceid": "ES:es" },
      "México": { "hl": "es-419", "gl": "MX", "ceid": "MX:es-419" },
      "Colombia": { "hl": "es-419", "gl": "CO", "ceid": "CO:es-419" },
      "Perú": { "hl": "es-419", "gl": "PE", "ceid": "PE:es-419" },
      "Argentina": { "hl": "es-419", "gl": "AR", "ceid": "AR:es-419" },
      "Turquía": { "hl": "tr", "gl": "TR", "ceid": "TR:tr" }
    },
    "rss_urls": [
      "https://feeds.elpais.com/mrss-s/pages/ep/site/cincodias.elpais.com/section/ultimas-noticias/portada",
      "https://feeds.elpais.com/mrss-s/list/ep/site/cincodias.elpais.com/section/economia",
