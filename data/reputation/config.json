    "place_id_env": "GOOGLE_PLACE_ID",
    "max_reviews_env": "GOOGLE_MAX_REVIEWS"
  },
  "youtube": {
    "enabled": false,
    "api_key_env": "YOUTUBE_API_KEY",
    "max_results_env": "YOUTUBE_MAX_RESULTS"
  },
  "downdetector": {
    "enabled": true,
    "scraping_env": "DOWNDETECTOR_SCRAPING",
    "max_items_env": "DOWNDETECTOR_MAX_ITEMS",
    "rss_urls": [
      "https://news.google.com/rss/search?q=Downdetector+BBVA+Empresas",
      "https://news.google.com/rss/search?q=Downdetector+BBVA+Business"
    ]
  },

  "models": {
    "sentiment_mode_env": "SENTIMENT_MODEL",
    "aspect_mode_env": "ASPECT_MODEL"
  },

